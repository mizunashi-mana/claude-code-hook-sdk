{
  "name": "@mizunashi_mana/claude-code-hook-sdk",
  "version": "1.0.0",
  "description": "A TypeScript SDK to write claude-code hooks easily with type safety, dependency injection, and comprehensive testing support.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "author": "mizunashi-mana",
  "license": "(Apache-2.0 OR MPL-2.0)",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mizunashi-mana/claude-code-hook-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/mizunashi-mana/claude-code-hook-sdk/issues"
  },
  "homepage": "https://github.com/mizunashi-mana/claude-code-hook-sdk#readme",
  "keywords": [
    "claude",
    "claude-code",
    "hooks",
    "sdk",
    "typescript",
    "cli",
    "development-tools"
  ],
  "files": [
    "dist/src/**/*.d.ts",
    "dist/src/**/*.js",
    "LICENSE",
    "LICENSE.Apache-2.0.txt",
    "LICENSE.MPL-2.0.txt",
    "README.md",
    "tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    ".",
    "example"
  ],
  "scripts": {
    "postinstall": "npm run build",
    "lint:eslint": "git ls-files -- '*.js' '*.jsx' '*.mjs' '*.ts' '*.tsx' | xargs eslint --cache --fix",
    "lint:tsc": "tsc --noEmit",
    "test:vitest": "vitest --run --coverage",
    "build": "tsc --declaration && tsc-alias"
  },
  "dependencies": {
    "inversify": "^7.6.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.32.0",
    "@eslint/mcp": "^0.1.0",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
