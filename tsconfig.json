{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@~test/*": [
        "test/*"
      ]
    },
    "strict": true,
    "declaration": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "example"
  ]
}
