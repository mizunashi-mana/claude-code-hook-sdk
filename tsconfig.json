{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@~test/*": [
        "test/*"
      ]
    },
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
