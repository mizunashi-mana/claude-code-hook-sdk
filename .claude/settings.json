{
  "permissions": {
    "allow": [
      "Bash(lint-all)",
      "Bash(npm run lint:*)",
      "Bash(npm run build:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npm -C example run logging-hook"
          }
        ]
      },
      {
        "matcher": "Write|Update|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npm -C example run format-on-post-tool"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npm -C example run logging-hook"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "npm -C example run reject-jest-and-prefer-vitest"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npm -C example run logging-hook"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npm -C example run logging-hook"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npm -C example run logging-hook"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npm -C example run logging-hook"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npm -C example run logging-hook"
          }
        ]
      }
    ]
  }
}
